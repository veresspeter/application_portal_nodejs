<% var menuitem='apps'; %>

<% include header %>

<h4 class="title">Aktuális pályázatok</h4>

<div class="applications" id="accordion" role="tablist">

    <% apps.forEach( function(app){  %>

    <div class="card">
        <div class="card-header" role="tab" id="heading<%= app.id %>">
            <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapse<%= app.id %>" aria-expanded="true"
                   aria-controls="collapse<%= app.id %>">
                    <h5 class="card-title"><%= app.title %></h5>
                    <h5 class="card-title edit">
                        <a class="card-link" href="/apps/del/<%= app.id %>">Törlés</a>
                        <a class="card-link" href="/apps/mod/<%= app.id %>">Szerkesztés</a>
                    </h5>
                </a>
            </h5>
        </div>

        <div id="collapse<%= app.id %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= app.id %>"
             data-parent="#accordion">
            <div class="card-body">
                <p><%= app.description %></p>
                <div class="card-body-footer">
                    <div class="right-side">
                        <a class="nav-link upload" href="" data-toggle="modal" data-target="#myModal">Feltöltés</a>
                        <a class="nav-link download" href="#"><%= app.filename %></a>
                    </div>
                    <h6>Határidő: <%= app.duedate %></h6>
                </div>
            </div>
        </div>
    </div>

    <% })  %>

</div>

<% include footer %>