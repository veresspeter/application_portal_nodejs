<% var menuitem='admin'; %>

<% include pageHeader %>

<h4 class="title">Felhasználók áttekintése</h4>
<table class="table table-center">
    <thead>
    <tr>
        <th class="table-center">Teljes név</th>
        <th class="table-center">Jogosultság</th>
        <th class="table-center">Lehetőségek</th>
    </tr>
    </thead>
    <tbody>

    <% users.forEach( function(user){ %>
    <tr>
        <td><%= user.name %></td>
        <td><%= (user.isadmin ) ? "admin" : "" %></td>
        <td>
            <% if ( user.isadmin ) { %>
            <a class="btn btn-outline-danger" href="/judg/admin/<%= user.id %>/user" >Lefokozás</a>
            <% } else { %>
            <a class="btn btn-outline-success" href="/judg/admin/<%= user.id %>/admin" >Kinevezés</a>
            <% } %>
        </td>
    </tr>
    <% }) %>

    </tbody>
</table>

<% include pageFooter %>