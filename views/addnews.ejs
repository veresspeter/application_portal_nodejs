<% if ( typeof(news) == 'undefined' ){ %>
    <% var menuitem = 'addnews'; %>
    <% var news = {
        id: '',
        title: '',
        duedate: '',
        description: ''
    }; %>
<% } else { %>
    <% var menuitem = 'modnews'; %>
<% } %>

<% include header %>

<div class="col-sm-6 form-container">
    <h4 class="title">Hír <%= (menuitem == 'addnews') ? 'létrehozása' : 'módosítása' %></h4>
    <form method="post" action=" <%= (menuitem == 'addnews') ? '/news/add' : '/news/mod/'+news.id %> ">
        <div class="form-group">
            <label for="applicationName" class="col-5">Hír címe</label>
            <input type="text" class="form-control col-7" id="applicationName" aria-describedby="userNameHelp" placeholder="Cím" value="<%= news.title %>" >
        </div>
        <div class="form-group">
            <textarea type="text" class="form-control" id="details" aria-describedby="passWordHelp" rows="8"  placeholder="Leírás" ><%= news.description %></textarea>
        </div>

        <div style="height: 15px"></div>

        <button type="submit" class="btn btn-block btn-outline-primary">Közzététel</button>
    </form>
</div>

<% include footer %>