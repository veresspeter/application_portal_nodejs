<% var menuitem = 'tenderAll'; %>

<% include pageHeader %>

<h4 class="title">Pályázatok áttekintése</h4>

<div class="applications" id="accordion" role="tablist">

    <% tenders.forEach( function(tender){ %>

    <div class="card">
        <div class="card-header" role="tab" id="heading<%= tender._id %>">
            <h5 class="mb-0">
                <a data-toggle="collapse" href="#collapse<%= tender._id %>" aria-expanded="true"
                   aria-controls="collapse<%= tender._id %>">
                    <h5 class="card-title"><%= tender.title %></h5>
                    <h5 class="card-title edit">
                        <a class="card-link" href="/tender/<%= tender._id %>/del">Törlés</a>
                        <a class="card-link" href="/tender/<%= tender._id %>/app">Megnyitás</a>
                    </h5>
                </a>
            </h5>
        </div>

        <div id="collapse<%= tender._id %>" class="collapse" role="tabpanel" aria-labelledby="heading<%= tender._id %>"
             data-parent="#accordion">
            <div class="card-body">
                <p><%= tender.description %></p>
                <div class="card-body-footer">
                    <h6 class="right-side"><%= tender.publisher.name %></h6>
                    <h6><%= func.moment(tender.startdate).format('YYYY-MM-DD').toString() %> - <%= func.moment(tender.duedate).format('YYYY-MM-DD').toString() %></h6>
                </div>
            </div>
        </div>
    </div>

    <% }) %>

</div>

<% include pageFooter %>