<% var menuitem=''; %>

<% include pageHeader %>

<h4><%= tender.title %></h4>
<div style="height: 20px"></div>
<table class="table">
    <thead>
    <tr>
        <th>#</th>
        <th>Teljes név</th>
        <th>Leadott pályázat</th>
        <th>Eredmény</th>
        <th>Bíráló</th>
        <th>Lehetőségek</th>
    </tr>
    </thead>
    <tbody>

    <% apps.forEach( function(app){ %>
    <tr>
        <td><%= app.id %></td>
        <td><%= app.owner.name %></td>
        <td><a href="" ><%= app.filename %></a></td>
        <td><%= app.score %></td>
        <td><%= app.judge.name %></td>

        <td>
        <% if ( app.score === undefined ) { %>
            <button type="button" class="btn btn-outline-primary">Pontozás</button>
        <% } else { %>
            <button type="button" class="btn btn-outline-warning">Módosít</button>
            <button type="button" class="btn btn-outline-danger">Töröl</button>
        <% } %>
        </td>

    </tr>
    <% }) %>

    </tbody>
</table>

<% include pageFooter %>