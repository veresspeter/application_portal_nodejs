
<% if ( loggedin ) { %>
<% tenders.forEach(function (tender) { %>

<!-- Modal -->
<div class="modal fade" id="Modal<%= tender._id %>" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="/app/<%= tender._id %>/mod" encType="multipart/form-data">
                <div class="modal-header">
                    <h4 class="modal-title">Pályázat beküldése</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6 class="modal-title"><%= tender.title %></h6>
                    <label class="btn btn-outline-dark " for="file-selector">
                        <input id="file-selector" type="file" accept=".pdf" style="display:none" name="application"
                               onchange="$('#upload-file-info').html(this.files[0].name)">
                        Fájl böngésző
                    </label>
                    <span class='label label-info' id="upload-file-info"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Mégse</button>
                    <button type="submit" class="btn btn-primary">Küldés</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<% }) %>
<% } %>